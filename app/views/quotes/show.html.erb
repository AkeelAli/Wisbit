	
 
<div id="view_page">
	<div id="header">
		<h1>Read Wisbits</h1>
		<div id="subtitle"><%= @category.name %></div>
	</div>
	
	<div id="content">
			
			<div id="navigate">
				<div id="right"><%=  link_to image_tag("../images/slide_right.png"),read_index_path(:category=>@quote.category_id, :index=>0) %></div>
			</div>
			
		
			<div id="quote">
				<div id="top"></div>
				<div id="mid"><p><%= @quote.quote %></p></div>
				<div id="bottom"></div>
			</div>
			<div id="under_quote">
				<table>
				<tr>
				<td>
					<div id="twitter">
						<a href="http://twitter.com/share" class="twitter-share-button" data-url="http://wisbit.akeelali.com/quotes/<%= @quote.id %>" data-text="<%= @quote.quote.length>117?@quote.quote[0,117]+"...":@quote.quote %>" data-count="none">Tweet</a><script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>		
					</div>
				</td>
				<td>
					<div id="score">
						<div id="top"></div>
						<div id="mid"><p><%= @quote.score.to_i %></p></div>
						<div id="bottom"></div>
					</div>
				</td>
				<td>
					<div id="fb">
						<div id="fb-root"></div><script src="http://connect.facebook.net/en_US/all.js#appId=160049097390643&amp;xfbml=1"></script><fb:like href="http://wisbit.akeelali.com/quotes/<%= @quote.id %>" send="false" layout="button_count" width="60" show_faces="false" font=""></fb:like>
					</div>
				</td>
				</tr>
				</table>
			</div>
			<div id="exit">
				<%= link_to "Exit", "/" %>
			</div>

	</div>
	
	<div id="footer">
		
	</div>
</div>

